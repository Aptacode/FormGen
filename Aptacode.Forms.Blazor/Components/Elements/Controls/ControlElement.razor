@using Aptacode.Forms.Shared.ViewModels.Elements.Controls
@using Aptacode.Forms.Shared.ViewModels.Elements.Controls.Fields
@inherits ControlElementBase

<Field Horizontal="@IsFormHorizontal">

    @if (!ViewModel.Label.IsHidden)
    {
        <FieldLabel>@ViewModel.Label.Text</FieldLabel>
    }

    <FieldBody>

        @switch (ViewModel)
        {
            case ButtonElementViewModel buttonViewModel:
                <ButtonElement ViewModel="@buttonViewModel"/>
                break;
            case TextElementViewModel textViewModel:
                <TextElement ViewModel="@textViewModel"/>
                break;
            case SelectElementViewModel selectViewModel:
                <SelectElementBase ViewModel="@selectViewModel"/>
                break;
            case CheckElementViewModel checkElementViewModel:
                <CheckElement ViewModel="@checkElementViewModel"/>
                break;
            case HtmlElementViewModel htmlElementViewModel:
                <HtmlElement ViewModel="@htmlElementViewModel"/>
                break;
        }
    </FieldBody>
</Field>