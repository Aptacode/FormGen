<Window x:Class="Aptacode.Forms.Wpf.Views.Designer.HtmlEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aptacode.Forms.Wpf.Views.Designer"
        xmlns:wpfRichText="clr-namespace:WpfRichText;assembly=WpfRichText"
        mc:Ignorable="d"
        Title="HtmlEditorDialog" Height="450" Width="800">
    <wpfRichText:RichTextEditor 
        Text="{Binding Content, Mode=TwoWay}" 
        IsContextMenuEnabled="True" 
        IsToolBarVisible="True" 
        IsReadOnly="False"								
        Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"
    />
</Window>
